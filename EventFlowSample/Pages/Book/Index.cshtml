@page
@model EventFlowSample.Pages.Book.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")" type="text/javascript"></script>
    <title>本一覧</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ボタン</th>
                        <th>ID</th>
                        <th>タイトル</th>
                        <th>貸出期間</th>
                        <th>氏名</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.本一覧)
                    {
                    <tr>
                        <td>
                            <form method="post">
                                <button class="btn btn-primary" asp-page-handler="Borrow" asp-route-id="@item.本のID.Value">借りる</button>
                                <button class="btn btn-success" asp-page-handler="Return" asp-route-id="@item.本のID.Value">返す</button>
                                <button class="btn btn-danger" asp-page-handler="Discard" asp-route-id="@item.本のID.Value">破棄</button>
                            </form>
                        </td>
                        <td>@item.本のID.Value</td>
                        <td>@item.本のタイトル.Value</td>
                        <td>@item.貸出期間?.画面表示()</td>
                        <td>@item.氏名?.Value</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
